<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical" android:weightSum="1" android:id="@+id/linearLayoutNovoTweet">
		<Button android:layout_height="wrap_content" android:onClick="novoTweet"
	android:id="@+id/buttonNovoTweet" android:text="@string/novotweet" android:layout_width="match_parent"></Button>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/linearLayoutNaoHaTweets">
		<TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_weight="1" android:layout_width="wrap_content" android:text="@string/semtweet" android:layout_gravity="center_horizontal" android:id="@+id/textViewNaoHaTweet"></TextView>
	</LinearLayout>
	<ListView android:layout_width="fill_parent"
		android:id="@+id/listViewPostados" android:layout_height="452dp">
		<!-- Preview: listitem=@android:layout/simple_list_item_2 -->
	</ListView>
</LinearLayout>
